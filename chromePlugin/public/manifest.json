{
  "manifest_version": 3,
  "name": "yolo-chrome-plugin",
  "version": "1.0.0",
  "description": "chrome插件-简历工具",
  "icons": {
    "16": "img/image.png",
    "48": "img/image.png",
    "128": "img/image.png"
  },
  "action": {
    "default_icon": "img/image.png",
    "default_title": "简历工具"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "cookies",
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://h.liepin.com/resume/showresumedetail/*"
      ],
      "run_at": "document_idle",
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/contentScript.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/service_worker.js",
    "type": "module"
  }
}
